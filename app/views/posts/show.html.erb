<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card">
    <div class="card-block">
      <strong class="card-title"><%= @post.subject %></strong>
      <p class="card-text"><%= @post.body %></p>
    </div>
  </div>
</div>

<% @replies.each do |reply| %>
  <div class="container">
    <div class="card">
      <div class="card-block">
        <p class="card-text"><%= reply.body %></p>
      </div>
    </div>
  </div>
<% end %>

<% if current_user.is_adviser? %>
  <%= render :partial => '/replies/form' %>
<% end %>

<%= link_to 'Back', posts_path, class:"btn btn-primary" %>

<% if @post.user.id == current_user.id %>
  <%= link_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %>
<% end %>
