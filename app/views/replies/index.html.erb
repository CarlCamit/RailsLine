<p id="notice"><%= notice %></p>

<h1>Replies</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.body %></td>
        <td><%= link_to 'Show', reply %></td>
        <td><%= link_to 'Edit', edit_reply_path(reply) %></td>
        <td><%= link_to 'Destroy', reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if adviser_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_adviser_session_path, method: :delete) %>        
</li>
<% else %>
  <li>
  <%= link_to('Login', new_adviser_session_path)  %>  
  </li>
<% end %>
<%= link_to 'New Reply', new_reply_path %>
